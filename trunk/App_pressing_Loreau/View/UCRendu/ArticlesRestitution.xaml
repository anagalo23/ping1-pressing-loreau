<UserControl x:Class="App_pressing_Loreau.View.ArticlesRestitution"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border BorderBrush="AliceBlue" Margin="3" BorderThickness="2" CornerRadius="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="70"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
               

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding ArticlesNameRes}" Margin="5"  />
            <TextBlock Grid.Column="1" Text="{Binding Path=Txb_ArticlesRes_CommentaireArticles}" Margin="5" />
            <TextBlock Grid.Column="2" Margin="5" Text="{Binding Path=Txb_ArticlesRes_photo}" />
            <TextBlock Grid.Column="3" Text="{Binding Txb_ArticlesRes_etat}" Margin="5" Width="60"  MinHeight="20"/>
           
            <Button  Margin="5" Grid.Column="4" Content="choisir" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}, Path= DataContext.choisirCetteArticle}"
                    CommandParameter="{Binding}" />

        </Grid>


    </Border>
</UserControl>
