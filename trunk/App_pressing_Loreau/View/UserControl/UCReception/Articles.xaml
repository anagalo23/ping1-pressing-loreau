<UserControl x:Class="App_pressing_Loreau.Articles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding ArticlesName}" Margin="5" />
        <TextBlock Grid.Column="1" Text="Commentaire : " Margin="5" />
        <TextBox Grid.Column="2" Margin="5" Text="{Binding Path=Txb_Articles_Commentaire}" MinWidth="60" MinHeight="20"/>
        <TextBox Grid.Column="3" Text="{Binding SelectFile}" Margin="5" MinWidth="60" MinHeight="20"/>
        <Button Content="Charger la photo" Command="{Binding Btn_Articles_ChargerPhoto}" Grid.Column="4" Margin="5"  />
        
        
        <Button Grid.Column="5" Margin="5"
                    Content="Supprimer"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}, Path= DataContext.DeleteArticles}"
                    CommandParameter="{Binding}" />
    </Grid>
</UserControl>
