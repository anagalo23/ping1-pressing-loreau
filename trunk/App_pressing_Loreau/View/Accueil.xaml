<Window x:Class="App_pressing_Loreau.View.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pressing de Loreau" Height="500" Width="750"
        WindowState="Maximized"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize" 
        ShowInTaskbar="False" >
    
    <Window.Resources>
    <Style  TargetType="Button">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="15" Background="{TemplateBinding Background}"
                                BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">

                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    </Window.Resources>
    <Grid Margin="10" >
        <Grid.RowDefinitions >
            <RowDefinition Height="50*"/>
            <RowDefinition Height="355*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <DockPanel  Grid.Row="0">
            <Grid Background="LightSkyBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>


                </Grid.ColumnDefinitions>
                <Button  x:Name="btn_accueil_reception"  FontFamily="Arial" FontSize="25" FontWeight="SemiBold"  Content="Reception" Grid.Column="0" Margin="5" Click="btn_accueil_reception_Click"  />
                <Button x:Name="btn_accueil_rendu"  FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="Rendu" Grid.Column="1" Margin="5" Click="btn_accueil_rendu_Click" />
                <Button x:Name="btn_accueil_facture" FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="Factures" Grid.Column="2" Margin="5" Click="btn_accueil_facture_Click" />
                <Button x:Name="btn_accueil_client_pro" FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="client Pro" Grid.Column="4" Margin="5" Click="btn_accueil_client_pro_Click"/>
                <Button x:Name="btn_accueil_impression" FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="Impressions" Grid.Column="5" Margin="5" Click="btn_accueil_impression_Click"/>
                <Button x:Name="btn_accueil_administrateur" FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="Administrateur" Grid.Column="6" Margin="5" Click="btn_accueil_administrateur_Click"/>
                <Button x:Name="btn_accueil_convoyeur" FontFamily="Arial" FontSize="25" FontWeight="SemiBold" Content="Convoyeur" Grid.Column="3" Margin="5" Click="btn_accueil_convoyeur_Click"/>

            </Grid>
        </DockPanel>
        <Border x:Name="border1" BorderBrush="Aqua" BorderThickness="2" Grid.Row="1" CornerRadius="20">
            <DockPanel x:Name="dp">

            </DockPanel>
        </Border>
        <DockPanel Grid.Row="2">
            <Grid Background="LightSkyBlue">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>


                <Button x:Name="btn_user1" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 1"  Grid.Row="0" Grid.Column="0" Margin="5" Click="btn_user1_Click" />
                <Button x:Name="btn_user2" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 2" Grid.Row="0" Grid.Column="1" Margin="5" Click="btn_user1_Click" />
                <Button x:Name="btn_user3" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 3" Grid.Row="1" Grid.Column="2" Margin="5" Click="btn_user1_Click"/>
                <Button x:Name="btn_user4" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 4" Grid.Row="1" Grid.Column="3" Margin="5" Click="btn_user1_Click" />
                <Button x:Name="btn_user5" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 5" Grid.Row="1" Grid.Column="4" Margin="5" Click="btn_user1_Click" />
                <Button x:Name="btn_user6" FontFamily="Arial" FontSize="22" FontWeight="SemiBold" Content="USER 6" Grid.Row="1" Grid.Column="5" Margin="5" Click="btn_user1_Click"  />
                <Button x:Name="btn_accueil_image" BorderBrush="White" Background="White" Grid.Row="0" Grid.Column="6"  Margin="5" 
                     Click="btn_accueil_image_Click">
                    <Image Source="/Image/Accueil1/logo_home.png"/>
                </Button>
            </Grid>
        </DockPanel>


    </Grid>
</Window>
