        </StackPanel>
        <Border BorderBrush="Azure" BorderThickness="1" HorizontalAlignment="Left" Height="323" Margin="380,31,0,0" VerticalAlignment="Top" Width="313">
            <Border BorderBrush="Azure" Background="Azure" BorderThickness="1" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="312" Margin="0,0,-1,0">
                <Label Content="Commandes terminées"/>
            </Border>

        </Border>

    </Grid>
</Window>
